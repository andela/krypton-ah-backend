{
  "name": "express-authorshaven",
  "version": "1.0.0",
  "description": "A Social platform for the creative at heart",
  "main": "index.js",
  "scripts": {
    "test": "export NODE_ENV=test && npm run db:reset && npm run db:migrate && mocha ./test/* --exit",
    "db:reset": "node_modules/.bin/sequelize db:migrate:undo:all",
    "db:migrate": "node_modules/.bin/sequelize db:migrate",
    "db:seed": "node_modules/.bin/sequelize db:seed:all",
    "test-coverage": "nyc --reporter=html --reporter=text mocha --recursive --exit",
    "lint": "./node_modules/eslint/bin/eslint.js './**/*.js'",
    "coverage": "nyc npm test && nyc report --reporter=text-lcov | coveralls",
    "prod-start": "node index.js",
    "start": "nodemon index.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "author": "Andela Simulations Programme",
  "license": "MIT",
  "dependencies": {
    "@sendgrid/mail": "^6.3.1",
    "bcrypt": "^3.0.3",
    "body-parser": "^1.18.3",
